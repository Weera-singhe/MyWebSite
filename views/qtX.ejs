<div class="qtDiv" id="opX2">
  <div class="opdiv opL" id="opXL2">
    <des>Cutting</des>
  </div>
  <div class="opdiv opM opXM" id="opXM2">
    <input type="number" class="wid80" name="shCut" id="shCut" value="1" />
    <des>*</des>
    <input type="number" class="wid60" name="perCut" id="perCut" value="1" />
  </div>
  <div class="opdiv opR" id="opXR2">
    <des class="cos" id="cosX2"></des>
  </div>
</div>
<div class="qtDiv" id="opX3">
  <div class="opdiv opL" id="opXL3">
    <des>Gathering</des>
  </div>
  <div class="opdiv opM opXM" id="opXM3">
    <input type="number" class="wid80" name="gtCost" id="gtCost" min="0" />
  </div>
  <div class="opdiv opR" id="opXR3">
    <des class="cos" id="cosX3"></des>
  </div>
</div>
<div class="qtDiv" id="opX4">
  <div class="opdiv opL" id="opXL4">
    <des>Padding</des>
  </div>
  <div class="opdiv opM opXM" id="opXM4">
    <input type="number" class="wid80" name="pdCost" id="pdCost" min="0" />
  </div>
  <div class="opdiv opR" id="opXR4">
    <des class="cos" id="cosX4"></des>
  </div>
</div>
<div class="qtDiv" id="opX5">
  <div class="opdiv opL" id="opXL5">
    <des>Packing</des>
  </div>
  <div class="opdiv opM opXM" id="opXM5">
    <input type="number" class="wid80" name="pkts" id="pkts" value="1" />
    <des>*</des>
    <input type="number" class="wid60" name="perPk" id="perPk" value="20" />
  </div>
  <div class="opdiv opR" id="opXR5">
    <des class="cos" id="cosX5"></des>
  </div>
</div>
<div class="qtDiv" id="opX6">
  <div class="opdiv opL" id="opXL6">
    <des>Delivery</des>
  </div>
  <div class="opdiv opM opXM" id="opXM6">
    <input type="number" class="wid80" name="dlvCost" id="dlvCost" min="0" />
  </div>
  <div class="opdiv opR" id="opXR6">
    <des class="cos" id="cosX6"></des>
  </div>
</div>

<script type="module">
  $(".opXM").on("change", calOpX);
  function calOpX() {
    var cutCost = Number($("#shCut").val()) * Number($("#perCut").val());
    if (cutCost < 2000) {
      cutCost = 2000;
      $("#cosX2").css("color", "firebrick");
    } else {
      $("#cosX2").css("color", "black");
    }
    var pkCost = Number($("#pkts").val()) * Number($("#perPk").val());

    $("#cosX1").html(Number($("#awCost").val()).toLocaleString());
    $("#cosX2").html(cutCost.toLocaleString());
    $("#cosX3").html(Number($("#gtCost").val()).toLocaleString());
    $("#cosX4").html(Number($("#pdCost").val()).toLocaleString());
    $("#cosX5").html(pkCost.toLocaleString());
    $("#cosX6").html(Number($("#dlvCost").val()).toLocaleString());
  }

  calOpX();
</script>
